// precedences
precedence right ASSIGN;
precedence left  PLUS, MINUS;
precedence left  TIMES, DIVIDE;
precedence left  UNARY_MINUS;

// grammar
ast ::= ast:self expr:e
        {: RESULT = new Block(ScalaUtils.put(self.expressions(), e)); :}
        |
        expr:e
        {: RESULT = new Block(ScalaUtils.makeList(e)); :}
        ;

expr ::= sub_expr:se SEMICOLON
         {: RESULT = se; :}
         |
         OPEN_CURLY_BRACE expr:e CLOSE_CURLY_BRACE
         {: RESULT = new Block(ScalaUtils.makeList(e)); :}
         |
         val_definition:val SEMICOLON
         {: RESULT = val; :}
         |
         var_definition:var SEMICOLON
         {: RESULT = var; :}
         |
         error SEMICOLON
         {: RESULT = new ErrorExpression(); :}
         |
         error CLOSE_CURLY_BRACE
         {: RESULT = new ErrorExpression(); :}
         ;

sub_expr ::= sub_expr:se1 PLUS sub_expr:se2
         {: RESULT = new BinaryExpression(se1, se2, new AddOperator()); :}
         |
         sub_expr:se1 MINUS sub_expr:se2
         {: RESULT = new BinaryExpression(se1, se2, new SubOperator()); :}
         |
         sub_expr:e1 TIMES sub_expr:e2
         {: RESULT = new BinaryExpression(se1, se2, new MulOperator()); :}
         |
         sub_expr:se1 DIVIDE sub_expr:se2
         {: RESULT = new BinaryExpression(se1, se2, new DivOperator()); :}
         |
         sub_expr:se1 ASSIGN sub_expr:se2
         {: RESULT = new BinaryExpression(se1, se2, new AssignOperator()); :}
         |
         ID:id
         {: RESULT = new IdConstant(id); :}
         |
         STRING:str
         {: RESULT = new StringConstant(str); :}
         |
         DEC_NUMBER:num
         {: RESULT = new DecConstant(num); :}
         |
         MINUS sub_expr:se
         {:  UnaryOperator operator = new UnarySubOperator();
             RESULT = new UnaryExpression(se, ScalaUtils.makeSome(operator)); :}
         %prec UNARY_MINUS
         |
         OPEN_PAREN sub_expr:se CLOSE_PAREN
         {: RESULT = se; :}
         ;

type_specification ::= COLON ID:id
         {: RESULT = id; :}
         ;

val_definition ::= VAL ID:id type_specification:type ASSIGN sub_expr:se
                   {: RESULT = new ValueDefinition(id, se); :}
                   |
                   VAL ID:id ASSIGN sub_expr:se
                   {: RESULT = new ValueDefinition(id, se); :}
                   ;

var_definition ::= VAR ID:id type_specification:type ASSIGN sub_expr:se
                   {: RESULT = new VariableDefinition(id, se); :}
                   |
                   VAR ID:id ASSIGN sub_expr:se
                   {: RESULT = new VariableDefinition(id, se); :}
                   ;

